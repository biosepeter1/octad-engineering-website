# Database
MONGODB_URI=mongodb://localhost:27017/construction-website
# or for MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/construction-website

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production

# Server
PORT=5000
NODE_ENV=development

# File Upload (Local - deprecated in favor of Cloudinary)
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880

# Cloudinary Configuration (Required for image uploads)
# Get these from your Cloudinary Dashboard: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Gmail SMTP Configuration (Replace with your actual Gmail credentials)
GMAIL_USER=your-gmail@gmail.com
GMAIL_APP_PASSWORD=your-16-char-app-password
ADMIN_EMAIL=your-admin@gmail.com

# Company Email (Optional - if different from GMAIL_USER)
COMPANY_EMAIL=info@company.com
